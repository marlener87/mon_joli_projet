{% extends 'base.html.twig' %}

{% block title %}La liste des auteurs{% endblock %}

{% block body %}
<style>
    .exemple-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .exemple-wrapper code { background: #f5f5f5; padding: 2px 6px; }
</style>

<!-- div.example-wrapper>h1{La liste des auteurs} -->
<div class="example-wrapper">
    <h1>La liste des auteurs</h1> 

    <ul class="list-group list-group-flush">
    {% for auteur in auteurs %}
    <li class="list-group-item d-flex justify-content-between align-items-center">
        <a href="{{ path('bd_show', {id :auteur.id}) }}">{{ auteur.auteur}} </a>
        <span class="badge badge-primary badge-pill">12</span>
    </li>    
    {% endfor %}
    </ul>

    <div class="navigation">
        {{ knp_pagination_render(auteurs)}}
        </div>
</div>

{% endblock %}
