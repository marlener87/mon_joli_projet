{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inscription sur le site</h1>

    {{ form_start(form)}}

    {{ form_row(form.name, {'label':'Nom d\'utilisateur', 'attr': {'class': 'input-group', 'placeholder': 'Nom d\'utilisateur...'}})}}
    {{ form_row(form.email, {'label':'Adresse email', 'attr': {'class': 'input-group', 'placeholder': 'Adresse email...'}})}}
    {{ form_row(form.password, {'label':'Mot de passe', 'attr': {'class': 'input-group', 'placeholder': 'Mot de passe...'}})}}
    {{ form_row(form.confirm_password, {'label':'Confirmation du mot de passe', 'attr': {'class': 'input-group', 'placeholder': 'Retaper le mot de passe...'}})}}

    <button type="submit" class="btn btn-success">Inscription !</button>
    {{ form_end(form)}}
{% endblock %}